<div class="quick-view-details">
  <h2>{{ product.title }}</h2>
  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" />
  <p>{{ product.description | strip_html | truncatewords: 25 }}</p>

  <form method="post" action="/cart/add" id="quick-view-form-{{ product.id }}">
    <select name="id" style="display: block; margin-bottom: 10px;">
      {% for variant in product.variants %}
        <option value="{{ variant.id }}">
          {{ variant.title }} {% if variant.available == false %} - Sold out {% endif %}
        </option>
      {% endfor %}
    </select>
    <button type="submit">Add to Cart</button>
  </form>
</div>

