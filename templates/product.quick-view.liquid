<div class="quick-view-details">
  <h2>{{ product.title }}</h2>
{% if product.featured_image %}
  <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.featured_image.alt | escape }}" loading="lazy" />
{% endif %}


  <p>{{ product.description | strip_html | truncatewords: 25 }}</p>

  <form method="post" action="/cart/add" id="quick-view-form-{{ product.id }}">
    <select name="id" style="display: block; margin-bottom: 10px;">
      {% for variant in product.variants %}
        <option value="{{ variant.id }}">
          {{ variant.title }} {% if variant.available == false %} - Sold out {% endif %}
        </option>
      {% endfor %}
    </select>
    <button type="submit">Add to Cart</button>
  </form>
</div>

